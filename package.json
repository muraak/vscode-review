{
    "name": "vscode-review",
    "displayName": "vscode-review",
    "description": "make code review efficient on vscode",
    "version": "0.0.4",
    "author": "muraak",
    "publisher": "muraak",
    "repository": {
        "url": "https://github.com/muraak/vscode-review.git"
    },
    "engines": {
        "vscode": "^1.29.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:review.showReviewPoints",
        "onCommand:review.addReviewPoint",
        "onCommand:review.convert"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "review.showReviewPoints",
                "title": "Show Review Points"
            },
            {
                "command": "review.convert",
                "title": "Convert current Review Point"
            },
            {
                "command": "review.addReviewPoint",
                "title": "Add Review Point"
            }
        ],
        "menus": {
            "editor/context": [
                {
                    "command": "review.addReviewPoint"
                }
            ]
        },
        "configuration": {
            "type": "object",
            "title": "vscode review configuration",
            "properties": {
                "review.username": {
                    "scope": "resource",
                    "type": "string",
                    "default": ""
                },
                "review.commitMessageTemplete": {
                    "scope": "resource",
                    "type": "string",
                    "default": ""
                },
                "review.locale": {
                    "scope": "resource",
                    "type": "string",
                    "default": "en",
                    "enum": [
                        "en",
                        "jp"
                    ]
                },
                "review.converter.converterPath": {
                    "scope": "resource",
                    "type": "string",
                    "default": ""
                },
                "review.converter.converterTempleteFilePath": {
                    "scope": "resource",
                    "type": "string",
                    "default": ""
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.42",
        "@types/node": "^8.10.25",
        "tslint": "^5.8.0",
        "typescript": "^2.6.1",
        "vscode": "^1.1.29"
    },
    "dependencies": {
        "@types/iconv": "^2.1.16",
        "cheerio": "^1.0.0-rc.2",
        "dateformat": "^3.0.3",
        "event-stream": "^3.3.4",
        "g": "^2.0.1",
        "html2plaintext": "^2.1.0",
        "iconv-lite": "^0.4.24",
        "request": "^2.88.0",
        "shortid": "^2.2.14",
        "vsce": "^1.57.0",
        "xlsx-populate": "^1.17.0"
    }
}
